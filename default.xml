<?xml version="1.0" encoding="UTF-8"?>
<manifest>


  <!-- Include SlimRoms manifest -->
  <include name="slim.xml" />

  <!-- Define remotes -->
  <remote  name="slimromssecurity"
           fetch="https://github.com/SlimRomsSecurity/"
           revision="mm6.0" />

  <remote  name="android-security"
           fetch="https://github.com/android-security/"
           revision="aosp-6.0" />
 
  <!-- Remove SlimRoms Repos we like to patch -->
  <remove-project name="SlimRoms/bootable_recovery" />
  <remove-project name="SlimRoms/android_build" />
  <remove-project name="SlimRoms/android_external_libnfc-nci" />
  <remove-project name="SlimRoms/android_external_skia" />
  <remove-project name="SlimRoms/frameworks_av" />
  <remove-project name="SlimRoms/frameworks_base" />
  <remove-project name="SlimRoms/frameworks_opt_net_wifi" />
  <remove-project name="SlimRoms/frameworks_native" />
  <remove-project name="SlimRoms/packages_apps_Messaging" />
  <remove-project name="SlimRoms/packages_services_Telephony" />
  <remove-project name="SlimRoms/android_system_bt" />
  <remove-project name="SlimRoms/vendor_slim" />
  <remove-project name="SlimRoms/platform_manifest" />

  <!-- Patched SlimRoms Repos -->
  <project path="build" name="android_build" remote="slimromssecurity" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>
  <project path="bootable/recovery" name="bootable_recovery" remote="slimromssecurity" />
  <project path="external/libnfc-nci" name="android_external_libnfc-nci" remote="slimromssecurity" />
  <project path="external/skia" name="android_external_skia" remote="slimromssecurity" />
  <project path="frameworks/av" name="frameworks_av" remote="slimromssecurity" />
  <project path="frameworks/base" name="frameworks_base" remote="slimromssecurity" />
  <project path="frameworks/opt/net/wifi" name="frameworks_opt_net_wifi" remote="slimromssecurity" />
  <project path="frameworks/native" name="frameworks_native" remote="slimromssecurity" />
  <project path="packages/apps/Messaging" name="packages_apps_Messaging" remote="slimromssecurity" />
  <project path="packages/services/Telephony" name="packages_services_Telephony" remote="slimromssecurity" />
  <project path="system/bt" name="android_system_bt" remote="slimromssecurity" />
  <project path="vendor/slim" name="vendor_slim" remote="slimromssecurity" />
  <project path="platform_manifest" name="platform_manifest" remote="slimromssecurity" />

  <!-- Remove AOSP Repos we like to patch -->
  <remove-project name="platform/external/boringssl" />
  <remove-project name="platform/external/freetype" />
  <remove-project name="platform/external/giflib" />
  <remove-project name="platform/external/libavc" />
  <remove-project name="platform/external/libhevc" />
  <remove-project name="platform/external/libmpeg2" />
  <remove-project name="platform/external/libnl" />
  <remove-project name="platform/external/sonivox" />
  <remove-project name="platform/external/v8" />
  <remove-project name="platform/frameworks/ex" />
  <remove-project name="platform/packages/apps/CertInstaller" />
  <remove-project name="platform/packages/apps/PackageInstaller" />

  <!-- Patched AOSP Repos -->
  <project path="external/boringssl" name="android_external_boringssl" remote="android-security" groups="pdk" />
  <project path="external/freetype" name="android_external_freetype" remote="android-security" groups="pdk" />
  <project path="external/giflib" name="android_external_giflib" remote="android-security" />
  <project path="external/libavc" name="android_external_libavc" remote="android-security" groups="pdk" />
  <project path="external/libhevc" name="android_external_libhevc" remote="android-security" groups="pdk-fs" />
  <project path="external/libmpeg2" name="android_external_libmpeg2" remote="android-security" />
  <project path="external/libnl" name="android_external_libnl" remote="android-security" groups="pdk" />
  <project path="external/sonivox" name="android_external_sonivox" remote="android-security" groups="pdk" />
  <project path="external/v8" name="android_external_v8" remote="android-security" groups="pdk" />
  <project path="frameworks/ex" name="android_frameworks_ex" remote="android-security" groups="pdk-cw-fs,pdk-fs" />
  <project path="packages/apps/CertInstaller" name="android_packages_apps_CertInstaller" remote="android-security" />
  <project path="packages/apps/PackageInstaller" name="android_packages_apps_PackageInstaller" remote="android-security" />

</manifest>

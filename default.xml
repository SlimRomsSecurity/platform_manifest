<?xml version="1.0" encoding="UTF-8"?>
<manifest>


  <!-- Include SlimRoms manifest -->
  <include name="slim.xml" />

  <!-- Define remotes -->
  <remote  name="slimromssecurity"
           fetch="https://github.com/SlimRomsSecurity/"
           revision="mm6.0" />

  <remote  name="android-security"
           fetch="https://github.com/android-security/"
           revision="aosp-6.0" />
 
  <!-- Remove SlimRoms Repos we like to patch -->
  <remove-project name="SlimRoms/bootable_recovery" />
  <remove-project name="SlimRoms/android_bionic" />
  <remove-project name="SlimRoms/android_build" />
  <remove-project name="SlimRoms/android_external_libnfc-nci" />
  <remove-project name="SlimRoms/android_external_sepolicy" />
  <remove-project name="SlimRoms/android_external_skia" />
  <remove-project name="SlimRoms/frameworks_av" />
  <remove-project name="SlimRoms/frameworks_base" />
  <remove-project name="SlimRoms/frameworks_opt_net_wifi" />
  <remove-project name="SlimRoms/frameworks_native" />
  <remove-project name="SlimRoms/hardware_qcom_audio" />
  <remove-project name="SlimRoms/hardware_qcom_media" />
  <remove-project name="SlimRoms/android_libcore" />
  <remove-project name="SlimRoms/packages_apps_Bluetooth" />
  <remove-project name="SlimRoms/packages_apps_Messaging" />
  <remove-project name="SlimRoms/packages_apps_Settings" />
  <remove-project name="SlimRoms/packages_providers_DownloadProvider" />
  <remove-project name="SlimRoms/packages_providers_MediaProvider" />
  <remove-project name="SlimRoms/packages_services_Telephony" />
  <remove-project name="SlimRoms/android_system_bt" />
  <remove-project name="SlimRoms/android_system_core" />
  <remove-project name="SlimRoms/vendor_slim" />
  <remove-project name="SlimRoms/platform_manifest" />

  <!-- Patched SlimRoms Repos -->
  <project path="build" name="android_build" remote="slimromssecurity" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>
  <project path="bionic" name="android_bionic" remote="slimromssecurity" />
  <project path="bootable/recovery" name="bootable_recovery" remote="slimromssecurity" />
  <project path="external/libnfc-nci" name="android_external_libnfc-nci" remote="slimromssecurity" />
  <project path="external/sepolicy" name="android_external_sepolicy" remote="slimromssecurity" />
  <project path="external/skia" name="android_external_skia" remote="slimromssecurity" />

  <project path="hardware/qcom/audio/default" name="hardware_qcom_audio" remote="slimromssecurity" revision="mm6.0" />
  <project path="hardware/qcom/audio-caf/apq8084" name="hardware_qcom_audio" remote="slimromssecurity" revision="mm6.0-caf-8084" />
  <project path="hardware/qcom/audio-caf/msm8660" name="hardware_qcom_audio" remote="slimromssecurity" revision="mm6.0-caf-8660" />
  <project path="hardware/qcom/audio-caf/msm8916" name="hardware_qcom_audio" remote="slimromssecurity" revision="mm6.0-caf-8916" />
  <project path="hardware/qcom/audio-caf/msm8952" name="hardware_qcom_audio" remote="slimromssecurity" revision="mm6.0-caf-8952" />
  <project path="hardware/qcom/audio-caf/msm8960" name="hardware_qcom_audio" remote="slimromssecurity" revision="mm6.0-caf-8960" />

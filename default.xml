  <project path="hardware/qcom/audio-caf/msm8996" name="hardware_qcom_audio" remote="slimromssecurity" revision="mm6.0-caf-8996" />
  <project path="hardware/qcom/media-caf/apq8084" name="hardware_qcom_media" remote="slimromssecurity" revision="mm6.0-caf-8084" />
  <project path="hardware/qcom/media-caf/msm8660" name="hardware_qcom_media" remote="slimromssecurity" revision="mm6.0-caf-8660" />
  <project path="hardware/qcom/media-caf/msm8916" name="hardware_qcom_media" remote="slimromssecurity" revision="mm6.0-caf-8916" />
  <project path="hardware/qcom/media-caf/msm8952" name="hardware_qcom_media" remote="slimromssecurity" revision="mm6.0-caf-8952" />
  <project path="hardware/qcom/media-caf/msm8960" name="hardware_qcom_media" remote="slimromssecurity" revision="mm6.0-caf-8960" />
  <project path="hardware/qcom/media-caf/msm8974" name="hardware_qcom_media" remote="slimromssecurity" revision="mm6.0-caf-8974" />
